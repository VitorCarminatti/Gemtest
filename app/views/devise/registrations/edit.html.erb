<h2><%= t('devise.views.edit.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <%= f.input :email, autofocus: true %>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <%= f.input :password, placeholder: 'Password' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

    <%= f.input :password_confirmation, autocomplete: "off" %>

    <%= f.input :current_password, autocomplete: "off" %>

    <%= f.submit t('devise.views.edit.submit'), class: 'btn btn-default'%>

<% end %>

<h3><%= t('devise.views.edit.cancel_account')%></h3>

<p>Descontente? <%= button_to t('devise.views.edit.cancel_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default' %></p>

<%= link_to t('devise.views.edit.back'), root_path %>

