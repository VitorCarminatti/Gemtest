<!DOCTYPE html>
<html>
  <head>
    <title>Gemtest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "Gem Test", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "MÃ©dicos", new_physician_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if(user_signed_in?) %>
            <li><%= link_to current_user.email, edit_user_registration_path %></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete  do %>
                <span class="glyphicon glyphicon-log-out"> Logout</span>
              <% end %>
            </li>
          <% else %>
            <li><%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in"> Login</span>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>


    <div class="container">
      <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
      <% end %>
    	<%= yield %>
    </div>
  </body>
</html>
